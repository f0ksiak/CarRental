{{#each cars}}
<div class="media">
  <img  src="{{owner.image}}" class="'mr-3" alt="Generic placeholder image" width="64px;" height="64px;">
  <div class="media-body">
   <a href="/displayCar/{{_id}}"><h5 class="mt-0">{{make}} {{model}} {{year}}</h5></a>
       <div class="row">
            {{#each image}}
             <div class="col-sm">
                 <img src="{{imageUrl}}" class="img-fluid" width="256" height="180" alt="image not loaded">
            </div>
            {{else}}
                
            {{/each}}

         </div>
   <p>{{pricePerHour}}$ per hour</p>
   <p>{{pricePerWeek}}$ per week</p>
      <small>{{location}}</small>
      <small>{{date}}</small>



  </div>
</div>
<hr>
{{else}}
    <p>no cars found</p>
{{/each}}